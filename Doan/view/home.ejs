<!DOCTYPE html>
<html ng-app="DoanCNPM">
<head>
    <%- include('head'); %>
</head>
<body ng-controller="khongcogi">
	<%- include('header'); %>
	<div class="container" style="margin-top: 10%;">
		<% result.reverse() %>
		<% result.forEach(function(re){ %>
		<li style="list-style: none">
		<a href="/post/<%= re.id%>" >
		<div class="card mb-3" style="max-width: 800px;">
		  	<div class="row no-gutters">
		    <div class="col-md-3">
		      <img src="<%= re.image %>" class="card-img" alt="...">
		    </div>
		    <div class="col-md-9">
		      <div class="card-body">
		        <h5 class="card-title"><%= re.title %></h5>
		        <p class="card-text"><%= re.price %></p>
		        <p class="card-text"><small class="text-muted"><%= re.created %></small></p>
		      </div>
		    </div>
		  </div>
		</div>
		</a>
		</li>
		<% }) %>
	</div>
	<%- include('footer'); %>
</body>

</html>