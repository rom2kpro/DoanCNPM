<!DOCTYPE html>
<html ng-app="DoanCNPM">
<head>
    <%- include('head'); %>
</head>
<body ng-controller="khongcogi">
	<%- include('header'); %>
	<div class="container" style="margin-top:  5%;">
		<div class="row">
			<div class="col-8">
				<div id="carouselExampleIndicators"class="carousel slide" data-ride="carousel">
				  <ol class="carousel-indicators">
				  	<% for(let i = 0; i < image.length; i++){ %>
				    <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= i == 0 ? 'active' : '' %>"></li>
				    <% } %>
				  </ol>
				  <div class="carousel-inner">
				  	<% var t = 0 %>
				  	<% image.forEach(function(val){ %>
				    <div class="carousel-item <%= t < 1 ? 'active' : ''%>"><% t++; %>
				      <img class="d-block w-100" style="height: 500px;" src="<%= val.name %>" alt="First slide">
				    </div>
				    <% }) %>
				  </div>
				  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
				    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
				    <span class="sr-only">Previous</span>
				  </a>
				  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
				    <span class="carousel-control-next-icon" aria-hidden="true"></span>
				    <span class="sr-only">Next</span>
				  </a>
				</div>
				<div style="background-color: #333; color: white; padding-left: 60%;">Ngày đăng tin: <%= info[0].created %></div>
				<div>
					<h3><%= info[0].title.toUpperCase() %></h3>
					<h4 style="color: red;"><%= info[0].price %></h4>
					<p><%= info[0].content %></p>
				</div>
			</div>
			<div class="col-4">
				<img src="<%= userPost[0].avatar %>" style="height: 100px;width: 100px; border-radius: 50%;margin-left: 35%; "><a href="#"><h5 class="text-center"><%= userPost[0].name %></h5></a>
				<hr>
				<h4 class="text-center"><%= userPost[0].phone %></h4>
				<hr>

			</div>
		</div>
	</div>
	<%- include('footer'); %>
</body>

</html>